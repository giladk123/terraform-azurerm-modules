{
  "aks-prod-001": {
    "resource_group_name": "rg-aks-prod-001",
    "location": "East US",
    "dns_prefix": "aks-prod-001",
    "kubernetes_version": "1.28.3",
    "sku_tier": "Standard",
    "node_resource_group": "rg-aks-prod-001-nodes",
    "identity": {
      "type": "SystemAssigned"
    },
    "default_node_pool": {
      "name": "system",
      "vm_size": "Standard_DS2_v2",
      "node_count": 3,
      "auto_scaling_enabled": true,
      "min_count": 3,
      "max_count": 10,
      "max_pods": 30,
      "os_disk_size_gb": 100,
      "os_disk_type": "Managed",
      "os_sku": "Ubuntu",
      "zones": ["1", "2", "3"],
      "only_critical_addons_enabled": true,
      "node_labels": {
        "nodepool": "system",
        "environment": "production"
      },
      "upgrade_settings": {
        "max_surge": "33%",
        "drain_timeout_in_minutes": 30,
        "node_soak_duration_in_minutes": 0
      },
      "linux_os_config": {
        "transparent_huge_page": "madvise",
        "transparent_huge_page_defrag": "defer+madvise",
        "sysctl_config": {
          "vm_max_map_count": 262144,
          "net_core_somaxconn": 32768,
          "net_ipv4_tcp_keepalive_time": 120
        }
      }
    },
    "node_pools": {
      "worker": {
        "vm_size": "Standard_DS3_v2",
        "node_count": 3,
        "auto_scaling_enabled": true,
        "min_count": 3,
        "max_count": 20,
        "max_pods": 50,
        "os_disk_size_gb": 100,
        "os_disk_type": "Managed",
        "os_sku": "Ubuntu",
        "zones": ["1", "2", "3"],
        "mode": "User",
        "node_labels": {
          "nodepool": "worker",
          "workload": "general"
        },
        "upgrade_settings": {
          "max_surge": "33%"
        }
      },
      "spot": {
        "vm_size": "Standard_DS2_v2",
        "node_count": 0,
        "auto_scaling_enabled": true,
        "min_count": 0,
        "max_count": 10,
        "priority": "Spot",
        "eviction_policy": "Delete",
        "spot_max_price": -1,
        "node_taints": ["kubernetes.azure.com/scalesetpriority=spot:NoSchedule"],
        "node_labels": {
          "kubernetes.azure.com/scalesetpriority": "spot",
          "nodepool": "spot"
        },
        "upgrade_settings": {
          "max_surge": "1"
        }
      }
    },
    "network_profile": {
      "network_plugin": "azure",
      "network_policy": "azure",
      "service_cidr": "10.0.0.0/16",
      "dns_service_ip": "10.0.0.10",
      "load_balancer_sku": "standard",
      "outbound_type": "loadBalancer",
      "load_balancer_profile": {
        "managed_outbound_ip_count": 2,
        "idle_timeout_in_minutes": 30,
        "backend_pool_type": "NodeIPConfiguration"
      }
    },
    "linux_profile": {
      "admin_username": "azureuser",
      "ssh_key": {
        "key_data": "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."
      }
    },
    "azure_active_directory_role_based_access_control": {
      "admin_group_object_ids": ["00000000-0000-0000-0000-000000000000"],
      "azure_rbac_enabled": true
    },
    "auto_scaler_profile": {
      "balance_similar_node_groups": true,
      "expander": "least-waste",
      "max_graceful_termination_sec": 600,
      "max_node_provisioning_time": "15m",
      "max_unready_nodes": 3,
      "max_unready_percentage": 45,
      "new_pod_scale_up_delay": "10s",
      "scale_down_delay_after_add": "10m",
      "scale_down_delay_after_failure": "3m",
      "scan_interval": "10s",
      "scale_down_unneeded": "10m",
      "scale_down_unready": "20m",
      "scale_down_utilization_threshold": 0.5,
      "empty_bulk_delete_max": 10,
      "skip_nodes_with_local_storage": true,
      "skip_nodes_with_system_pods": true
    },
    "oms_agent": {
      "log_analytics_workspace_id": "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/rg-monitoring/providers/Microsoft.OperationalInsights/workspaces/law-aks-monitoring",
      "msi_auth_for_monitoring_enabled": true
    },
    "key_vault_secrets_provider": {
      "secret_rotation_enabled": true,
      "secret_rotation_interval": "2m"
    },
    "automatic_upgrade_channel": "stable",
    "node_os_upgrade_channel": "NodeImage",
    "azure_policy_enabled": true,
    "workload_identity_enabled": true,
    "oidc_issuer_enabled": true,
    "image_cleaner_enabled": true,
    "image_cleaner_interval_hours": 24,
    "storage_profile": {
      "blob_driver_enabled": true,
      "disk_driver_enabled": true,
      "file_driver_enabled": true,
      "snapshot_controller_enabled": true
    },
    "maintenance_window": {
      "allowed": [
        {
          "day": "Sunday",
          "hours": [2, 3, 4]
        }
      ]
    },
    "tags": {
      "Environment": "Production",
      "Project": "AKS-Production",
      "ManagedBy": "Terraform",
      "CostCenter": "IT-001"
    }
  }
}
